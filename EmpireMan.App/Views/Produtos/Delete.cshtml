@model EmpireMan.App.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Excluir " + Model.Descricao;
}

<h4 style="padding-top: 50px">@ViewData["Title"]</h4>
<h5>Você tem certeza disso?</h5>

<div class="row">
    <div class="col-md-4">
        <img src="~/imagensProdutos/@Model.Imagem" alt="@Model.Imagem" style="width: 300px; height: 300px" />
    </div>
    <dl class="col-md-8">
        <dt class="col-sm-2">
            @Html.DisplayName("Categoria")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Descricao)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CodigoBarras)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodigoBarras)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class="col-sm-10">
            @Model.Valor.ToString("C")
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a class="btn btn-info" asp-action="Index">Voltar</a>
    </form>
</div>