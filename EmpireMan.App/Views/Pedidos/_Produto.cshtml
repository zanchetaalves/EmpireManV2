@model EmpireMan.App.ViewModels.PedidoItensViewModel

<div class="row">
    <div class="form-group col-md-6">
        <label asp-for="@Model.ProdutoId" class="control-label"></label>
        <select asp-for="@Model.ProdutoId" class="form-control" asp-items="@(new SelectList(Model.ListaProdutos, "Id", "Descricao"))">
            <option></option>
        </select>
        <span asp-validation-for="@Model.ProdutoId" class="text-danger"></span>
    </div>
    <div class="form-group col-md-2">
        <label asp-for="@Model.Quantidade" class="control-label"></label>
        <input asp-for="@Model.Quantidade" class="form-control" />
        <span asp-validation-for="@Model.Quantidade" class="text-danger"></span>
    </div>
    <div class="form-group col-md-2">
        <label asp-for="@Model.ValorUnitario" class="control-label"></label>
        <input asp-for="@Model.ValorUnitario" class="form-control" />
        <span asp-validation-for="@Model.ValorUnitario" class="text-danger"></span>
    </div>
    <div class="form-group col-md-2">
        <label asp-for="@Model.ValorTotal" class="control-label"></label>
        <input asp-for="@Model.ValorTotal" class="form-control" />
        <span asp-validation-for="@Model.ValorTotal" class="text-danger"></span>
    </div>
</div>